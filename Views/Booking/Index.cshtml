@{
    Layout = "_Layout";
    ViewBag.Title = "Booking";
}
@model BookingViewModel

<form style="width: 400px" asp-action="FindAreas">
    <legend>Book a Service</legend>
    <div class="form-group">
        <label>Choose Location:</label>
        <select asp-for="SelectedLocation" asp-items="Model.AvailableLocations" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label>Car Number:</label>
        <input asp-for="CarNumber" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Start Time:</label>
        <input asp-for="StartTime" type="text" id="start-time" class="form-control" data-enable-time="true" data-date-format="d/m/Y H:m" />
    </div>
    <div class="form-group">
        <label>End Time:</label>
        <input asp-for="EndTime" type="text" id="end-time" class="form-control" data-enable-time="true" data-date-format="d/m/Y H:m" />
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
</form>

@section scripts {
    <script>
        window.onload = function() {
            document.getElementById('start-time').flatpickr();
            document.getElementById('end-time').flatpickr();
        };
    </script>
}
