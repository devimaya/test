@{
    Layout = "_Layout";
    ViewBag.Title = "Booking";
}
@model BookingViewModel

<form style="width: 400px" asp-action="SaveBooking">
    <legend>Book a Service</legend>
    <div class="form-group">
        <label>Choose Area:</label>
        <select asp-for="SelectedArea" asp-items="Model.AvailableAreas" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label>Location:</label>
        <div>@Model.Locations.First(x => x.Id == Model.SelectedLocation).Name</div>
        <input type="hidden" asp-for="SelectedLocation" />
    </div>
    <div class="form-group">
        <label>Car Number:</label>
        <div>@Model.CarNumber</div>
        <input type="hidden" asp-for="CarNumber" />
    </div>
    <div class="form-group">
        <label>Start Time:</label>
        <div>@Model.StartTime</div>
        <input type="hidden" asp-for="StartTime" />
    </div>
    <div class="form-group">
        <label>End Time:</label>
        <div>@Model.EndTime</div>
        <input type="hidden" asp-for="EndTime" />
    </div>
    <button type="submit" class="btn btn-primary">Book</button>
</form>
